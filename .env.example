# ===========================================
# Sports Booking SaaS - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/santiago?schema=public"

# ===========================================
# REDIS
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-at-least-32-chars"
JWT_EXPIRATION="7d"

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV="development"
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# ===========================================
# FRONTEND (NEXT.JS)
# ===========================================
NEXT_PUBLIC_API_URL="http://localhost:3001/api/v1"
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"

# ===========================================
# MERCADO PAGO (Sandbox - Get from MP Dashboard)
# ===========================================
# Note: Each facility will have their own credentials stored in the database
# These are optional platform-level defaults
# MERCADOPAGO_ACCESS_TOKEN=""
# MERCADOPAGO_PUBLIC_KEY=""

# ===========================================
# WHATSAPP (Meta Business - Per Facility)
# ===========================================
# Note: Each facility will have their own credentials stored in the database
# WHATSAPP_VERIFY_TOKEN="your-webhook-verify-token"

# ===========================================
# AI SERVICES (Per Facility)
# ===========================================
# Note: Each facility will have their own credentials stored in the database
# GEMINI_API_KEY=""
# OPENAI_API_KEY="" # For Whisper

# ===========================================
# EMAIL (Optional)
# ===========================================
# SMTP_HOST=""
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASSWORD=""
# SMTP_FROM="noreply@sportsbook.com"
