# ===========================================
# Sports Booking SaaS - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/santiago?schema=public"

# ===========================================
# REDIS
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-at-least-32-chars"
JWT_EXPIRATION="7d"

# ===========================================
# ENCRYPTION (for OAuth tokens, WhatsApp sessions)
# ===========================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="your-super-secret-encryption-key-at-least-32-chars"

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV="development"
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# ===========================================
# FRONTEND (NEXT.JS)
# ===========================================
NEXT_PUBLIC_API_URL="http://localhost:3001/api/v1"
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"

# ===========================================
# MERCADO PAGO OAUTH (Platform-level)
# ===========================================
# OAuth App credentials for Mercado Pago integration
# Get from: https://www.mercadopago.com.ar/developers/panel/app
MP_CLIENT_ID="your-mp-app-client-id"
MP_CLIENT_SECRET="your-mp-app-client-secret"
MP_REDIRECT_URI="http://localhost:3000/integrations/mercadopago/callback"

# ===========================================
# WHATSAPP (Baileys - Platform-level)
# ===========================================
# WhatsApp Business integration using Baileys (QR code connection)
# No API keys needed - facilities connect via QR code
# Session data is encrypted and stored in database per facility

# ===========================================
# AI SERVICES (Centralized - Santiago's keys)
# ===========================================
# CRITICAL: These are Santiago's centralized AI keys used for ALL facilities
# NOT per-facility credentials
GEMINI_API_KEY="your-gemini-api-key"
OPENAI_API_KEY="your-openai-api-key-for-whisper"

# ===========================================
# EMAIL (Optional)
# ===========================================
# SMTP_HOST=""
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASSWORD=""
# SMTP_FROM="noreply@sportsbook.com"
